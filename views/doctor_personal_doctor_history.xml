<odoo>
    <record id="hospital_doctor_personal_doctor_history_action" model="ir.actions.act_window">
        <field name="name">Personal Doctor History</field>
        <field name="res_model">hospital.doctor.personal.doctor.history</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="hospital_doctor_personal_doctor_history_view_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.personal.doctor.history.tree</field>
        <field name="model">hospital.doctor.personal.doctor.history</field>
        <field name="arch" type="xml">
            <tree string="Personal Doctor History">
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="assignment_date"/>
            </tree>
        </field>
    </record>

    <record id="hospital_doctor_personal_doctor_history_view_form" model="ir.ui.view">
        <field name="name">hospital.doctor.personal.doctor.history.form</field>
        <field name="model">hospital.doctor.personal.doctor.history</field>
        <field name="arch" type="xml">
            <form string="Personal Doctor History">
                <sheet>
                    <group>
                        <field name="doctor_id"/>
                        <field name="patient_id"/>
                        <field name="assignment_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
